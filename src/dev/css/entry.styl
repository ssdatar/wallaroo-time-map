*,
*::before,
*::after {
  box-sizing: border-box;
}

:root {
  --select-border: #777;
  --select-focus: blue;
  --select-arrow: $offwhite;
}

.source-and-credit
  clear both
  width 100%
  overflow hidden
  margin-top 1em

  p
    line-height 1.6
    padding 0
    margin 0
    font-size 12px
    text-align left
    float none

  .source span
    font-weight normal
    +mq('bp-2')
      float left

  .credit span
    text-transform uppercase
    +mq('bp-2')
      text-align right
      float right

#wallaroo-map
  height 500px
  font-family 'Lato'
  +mq(bp-2)
    height 600px

  .graphic__input
    position absolute
    right 5px
    bottom 5px
    height auto
    z-index 2
    background $offwhite
    opacity 0.7
    padding 1em
    width auto
    +mq(bp-2)
      width 250px
      font-size 1.1rem
      font-weight bold
      line-height 1.4

    #slider
      width 90%

    &--dropdown
      font-family 'Lato'
      width: 100%;
      min-width: 15ch;
      max-width: 30ch;
      border: 1px solid $offwhite
      border-radius: 0.25em;
      // padding: 0.25em 0.5em;
      cursor: pointer;
      line-height: 1.1;
      background-color: #fff;
      background-image: linear-gradient(to top, #f9f9f9, #fff 33%)
      appearance: none;
      color $black

    #flag-select
      // Additional resets for further consistency
      display: block;
      font-size: 16px;
      font-family: 'Lato'
      font-weight: 700;
      // color: $gray-light;
      line-height: 1.3;
      padding: .6em 1.4em .5em .8em;
      width: 100%;
      max-width: 100%;
      box-sizing: border-box;
      margin: 0;
      border: 1px solid #aaa;
      box-shadow: 0 1px 0 1px rgba(0, 0, 0, 0.04);
      -moz-appearance: none;
      -webkit-appearance: none;
      appearance: none;
      background-color: #fff;
      background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20width%3D%22292.4%22%20height%3D%22292.4%22%3E%3Cpath%20fill%3D%22%23007CB2%22%20d%3D%22M287%2069.4a17.6%2017.6%200%200%200-13-5.4H18.4c-5%200-9.3%201.8-12.9%205.4A17.6%2017.6%200%200%200%200%2082.2c0%205%201.8%209.3%205.4%2012.9l128%20127.9c3.6%203.6%207.8%205.4%2012.8%205.4s9.2-1.8%2012.8-5.4L287%2095c3.5-3.5%205.4-7.8%205.4-12.8%200-5-1.9-9.2-5.5-12.8z%22%2F%3E%3C%2Fsvg%3E'),
        linear-gradient(to bottom, #ffffff 0%,#e5e5e5 100%);
      background-repeat: no-repeat, repeat;
      background-position: right .7em top 50%, 0 0;
      background-size: .65em auto, 100%;

      option
        font-family 'Lato'


.mapboxgl-popup
  line-height 1.6
  padding 1em
  font-size 1em
  +mq(bp-2)
    font-size 1.1em

.graphic
  &__legend
    position absolute
    right 0px
    top 0px
    z-index 2
    color $offwhite
    padding 1em
    +mq(bp-2)
      right 20px
      top 20px

    .legend-text
      font-size 0.9em
      vertical-align text-bottom
      +mq(bp-2)
        font-size 1.2em

    .legend-box
      height 1.2em
      width @height
      border-radius 50%
      display inline-block
      margin-right .25em

      &-1
        background #8dd3c7

      &-2
        background #ffffb3

      &-3
        background #fdc086

      &-4
        background #fb8072

  &__text
    margin .5rem 0

    &--hed
      font-weight bold
      +mq('bp-2')
        font-size 1.1rem

    &--subhed
      font-size .9rem
      +mq('bp-2')
        font-size 1rem
        margin-bottom 1rem
